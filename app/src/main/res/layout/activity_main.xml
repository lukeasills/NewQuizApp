                   android:layout_marginVertical="5dp"
                   android:layout_width="290dp"
                   android:layout_marginHorizontal="5dp"
                   android:background="#ffffff"
                   android:inputType="text"/>
           </LinearLayout>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="10dp"
           android:background="#700e15">
           <ImageView
               android:src="@drawable/captcha7"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:id="@+id/captcha7"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_width="300dp"
               android:layout_below="@id/captcha7"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerHorizontal="true"
               android:layout_marginVertical="5dp"
               android:background="#ffff68">
               <RadioGroup
                   android:layout_marginVertical="5dp"
                   android:layout_marginLeft="5dp"
                   android:id="@+id/radioGroup3"
                   android:layout_width="290dp"
                   android:layout_height="wrap_content"
                   android:background="#ffffff">
                   <RadioButton
                       android:id="@+id/radioG3B1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Communist Manifesto"
                       />
                   <RadioButton
                       android:id="@+id/radioG3B2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="U.S. Constitution Article 2 Section 2"
                       />
                   <RadioButton
                       android:id="@+id/radioG3B3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Instagram Terms of Service"
                       />
                   <RadioButton
                       android:id="@+id/radioG3B4"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="1812 Declaration of War"
                       />
               </RadioGroup>
           </LinearLayout>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="10dp"
           android:background="#700e15">
           <ImageView
               android:src="@drawable/captcha8"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:id="@+id/captcha8"
               android:layout_height="wrap_content"/>
           <LinearLayout
               android:layout_width="300dp"
               android:layout_below="@id/captcha8"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_centerHorizontal="true"
               android:layout_marginVertical="5dp"
               android:background="#ffff68">
               <EditText
                   android:id="@+id/edittext5"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="5dp"
                   android:layout_width="290dp"
                   android:layout_marginHorizontal="5dp"
                   android:background="#ffffff"
                   android:inputType="text"/>
               <EditText
                   android:id="@+id/edittext6"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="5dp"
                   android:layout_width="290dp"
                   android:layout_marginHorizontal="5dp"
                   android:background="#ffffff"
                   android:inputType="text"/>
           </LinearLayout>

       </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="10dp"
           android:background="#700e15">
           <ImageView
               android:src="@drawable/captcha9"
