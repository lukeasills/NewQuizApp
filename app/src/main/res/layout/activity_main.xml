               android:orientation="vertical"
               android:layout_centerHorizontal="true"
               android:layout_marginVertical="5dp"
               android:background="#ffff68">
               <EditText
                   android:id="@+id/edittext7"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="5dp"
                   android:layout_width="290dp"
                   android:layout_marginHorizontal="5dp"
                   android:background="#ffffff"
                   android:inputType="text"/>
           </LinearLayout>

       </RelativeLayout>



      <CheckBox
          android:id="@+id/robotVerification"
          android:text="I am not a robot."
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="checkAnswers" />

       <TextView
           android:id="@+id/displayView1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Your Captcha Score:"
           android:background="#ffff68"/>
       <TextView
           android:id="@+id/displayView2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Your Missed Captchas:"
           android:background="#ffff68"/>

   </LinearLayout>

</ScrollView>