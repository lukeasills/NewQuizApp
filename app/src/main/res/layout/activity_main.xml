<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginVertical="10dp"
          android:layout_marginHorizontal="10dp"
          android:text="To protect against automated spam, you'll need to complete the following Captchas to complete the quiz."/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingVertical="10dp"
          android:background="#700e15">
         <ImageView
             android:src="@drawable/captcha1"
             android:layout_centerHorizontal="true"
             android:layout_width="wrap_content"
             android:id="@+id/captcha1"
             android:layout_height="wrap_content"/>
         <LinearLayout
             android:layout_width="300dp"
             android:layout_below="@id/captcha1"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_centerHorizontal="true"
             android:layout_marginVertical="5dp"
             android:background="#ffff68">
             <EditText
                 android:id="@+id/edittext1"
                 android:layout_height="wrap_content"
                 android:layout_marginVertical="5dp"
                 android:layout_width="290dp"
                 android:layout_marginHorizontal="5dp"
                 android:background="#ffffff"
                 android:inputType="text"/>
         </LinearLayout>

      </RelativeLayout>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingVertical="10dp"
          android:background="#700e15">
         <ImageView
             android:src="@drawable/captcha2"
             android:layout_centerHorizontal="true"
             android:layout_width="wrap_content"
             android:id="@+id/captcha2"
             android:layout_height="wrap_content"/>
         <LinearLayout
             android:layout_width="300dp"
             android:layout_below="@id/captcha2"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_centerHorizontal="true"
             android:layout_marginVertical="5dp"
             android:background="#ffff68">
            <RadioGroup
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/radioGroup1"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="#ffffff">
                <RadioButton
                    android:id="@+id/radioG1B1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dante inferno"
                    />
                <RadioButton
                    android:id="@+id/radioG1B2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quentin Tarantino"
                    />
                <RadioButton
                    android:id="@+id/radioG1B3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quinte Taranterno"
                    />
                <RadioButton
                    android:id="@+id/radioG1B4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="this captcha's too easy"
                    />
             </RadioGroup>
         </LinearLayout>

      </RelativeLayout>

       <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingVertical="10dp"
       android:background="#700e15">
       <ImageView
           android:src="@drawable/captcha3"
           android:layout_centerHorizontal="true"
           android:layout_width="wrap_content"
           android:id="@+id/captcha3"
           android:layout_height="wrap_content"/>
       <LinearLayout
           android:layout_width="300dp"
           android:layout_below="@id/captcha3"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerHorizontal="true"
           android:layout_marginVertical="5dp"
           android:background="#ffff68">
           <RadioGroup
               android:layout_marginVertical="5dp"
               android:layout_marginLeft="5dp"
               android:id="@+id/radioGroup2"
               android:layout_width="290dp"
               android:layout_height="wrap_content"
               android:background="#ffffff">
               <RadioButton
                   android:id="@+id/radioG2B1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="hope attack"
                   />
               <RadioButton
                   android:id="@+id/radioG2B2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="haspe etek"
                   />
               <RadioButton
                   android:id="@+id/radioG2B3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="hate speech"
                   />
               <RadioButton
                   android:id="@+id/radioG2B4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="h8te spe3tch"
                   />
           </RadioGroup>
       </LinearLayout>

   </RelativeLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingVertical="10dp"
